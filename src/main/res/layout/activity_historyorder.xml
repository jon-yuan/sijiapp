<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@drawable/icon_background_blue">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/defautl_navigationbar_size"
        app:title="@string/history_order"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/goback"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                style="@style/TextViewStyle"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="@string/zongshourue"/>
            <TextView
                android:id="@+id/tv_total"
                style="@style/TextViewStyle"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="--"/>
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    style="@style/TextViewStyle"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="@string/youkajine"/>
                <TextView
                    android:id="@+id/tv_youka"
                    style="@style/TextViewStyle"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="--"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    style="@style/TextViewStyle"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="@string/zengsongjine"/>
                <TextView
                    android:id="@+id/tv_zengsong"
                    style="@style/TextViewStyle"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="--"/>
            </LinearLayout>


        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    style="@style/TextViewStyle"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="@string/xianjinjine"/>
                <TextView
                    android:id="@+id/tv_xianjin"
                    style="@style/TextViewStyle"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="--"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    style="@style/TextViewStyle"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="@string/qitashouru"/>
                <TextView
                    android:id="@+id/tv_shouru"
                    style="@style/TextViewStyle"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="--"/>
            </LinearLayout>
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                style="@style/TextViewStyle"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="@string/qitakouchu"/>

            <TextView
                android:id="@+id/tv_kouchu"
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="--"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        style="@style/LinelayoutStyle"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/icon_order"
            android:scaleType="centerInside"/>
        <TextView
            style="@style/TextViewStyle"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:drawablePadding="10dp"
            android:text="@string/all_order"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_chose_time"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/icon_rili"
            android:scaleType="centerInside"/>
        <TextView
            android:id="@+id/tv_chose_time"
            style="@style/TextViewStyle"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:layout_marginLeft="5dp"
            android:drawablePadding="10dp"
            android:text="@string/select_time"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"/>

</LinearLayout>