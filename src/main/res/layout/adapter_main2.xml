<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layout_driver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:paddingHorizontal="15dp">
        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/v_1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:enabled="false"
                android:textSize="10sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/shape_round_blue" />
            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/icon_state_line"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:text="2018年2月23日  12:23"
                android:layout_height="match_parent"
                android:textColor="@color/text_color_big_title"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/tv_addrss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_big_title"
                android:textSize="12sp"
                android:layout_marginVertical="10dp"
                android:text="运车辆已发运车辆已发运车辆已发运车辆已发运车辆已发运车辆已发运车辆已发运车辆已发运"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/lianxiren"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_color_big_title"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:text="于少华"
                        android:layout_marginLeft="5dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/black_666"
                        android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="联系人："
                        android:layout_height="match_parent"
                        android:textColor="@color/text_color_big_title"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/tv_persion"
                        android:layout_width="wrap_content"
                        android:text="18717372920"
                        android:layout_height="wrap_content"
                        android:textColor="@color/btn_bg_color_normal"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>