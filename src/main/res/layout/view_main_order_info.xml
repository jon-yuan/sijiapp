<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_startingplace"
        style="@style/TextViewStyle"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-5dp"
        android:text="徐州"
        android:textColor="@color/text_color_big_title"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/tv_endplace"
        style="@style/TextViewStyle"
        android:layout_marginEnd="8dp"
        android:text="广州"
        android:textColor="@color/text_color_big_title"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_startingplace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_startingplace" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/shape_round_blue"
        app:layout_constraintBottom_toBottomOf="@+id/tv_startingplace"
        app:layout_constraintStart_toEndOf="@+id/tv_startingplace"
        app:layout_constraintTop_toTopOf="@+id/tv_startingplace" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shape_round_blue"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toStartOf="@+id/tv_endplace"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <ImageView
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_line_background"
        app:layout_constraintBottom_toBottomOf="@+id/textView13"
        app:layout_constraintEnd_toStartOf="@+id/textView14"
        app:layout_constraintStart_toEndOf="@+id/textView13"
        app:layout_constraintTop_toTopOf="@+id/textView13" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_car_blue" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/tv_startingplace"
        app:layout_constraintTop_toBottomOf="@+id/tv_startingplace"
        app:srcCompat="@drawable/icon_clock" />

    <TextView
        android:id="@+id/textView11"
        style="@style/TextViewStyle"
        android:layout_marginStart="5dp"
        android:textSize="13sp"
        android:textColor="@color/text_color_big_title"
        android:text="@string/jihuatihuoshijian_point"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textView12"
        style="@style/TextViewStyle"
        android:layout_marginStart="5dp"
        android:textSize="13sp"
        android:textColor="@color/text_color_big_title"
        android:text="2018-11-25"
        app:layout_constraintBottom_toBottomOf="@+id/textView11"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toTopOf="@+id/textView11" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:srcCompat="@drawable/icon_car_gray" />

    <TextView
        android:id="@+id/tv_juli"
        style="@style/TextViewStyle"
        android:layout_marginStart="5dp"
        android:textSize="13sp"
        android:textColor="@color/text_color_big_title"
        android:text="208公里"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:srcCompat="@drawable/icon_remark" />

    <TextView
        android:id="@+id/tv_remark"
        style="@style/TextViewStyle"
        android:layout_marginStart="5dp"
        android:textSize="13sp"
        android:textColor="@color/text_color_big_title"
        android:text="一提一卸"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

</android.support.constraint.ConstraintLayout>